<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="root"
            prefHeight="640.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="goober.ui.MainWindow">
    <children>

        <!-- Simple top toolbar -->
        <ToolBar AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 styleClass="toolbar">
            <Label text="Goober" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #e5e7eb;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <ToggleButton fx:id="themeToggle" text="Light" />
            <Button text="Clear" onAction="#handleClear" />
        </ToolBar>

        <ScrollPane fx:id="scrollPane"
                    AnchorPane.topAnchor="42.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="56.0"
                    fitToWidth="true" hbarPolicy="NEVER" vvalue="1.0">
            <content>
                <VBox fx:id="dialogContainer" id="dialogContainer" prefWidth="400.0" />
            </content>
        </ScrollPane>

        <HBox fx:id="inputRow" id="inputRow"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0"
              spacing="8">
            <TextField fx:id="userInput" promptText="Type a commandâ€¦ (Enter to send)"/>
            <Button fx:id="sendButton" text="Send" onAction="#handleUserInput" styleClass="primary"/>
        </HBox>

    </children>
</AnchorPane>
